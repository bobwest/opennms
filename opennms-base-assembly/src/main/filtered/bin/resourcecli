#!/bin/sh -
# c gallen - modified to use onejar in bin directory

JAVA_OPTIONS="-Xmx256m"
OPENNMS_HOME="${install.dir}"
OPENNMS_BINDIR="${install.bin.dir}"
	
exec "$OPENNMS_BINDIR"/runjava -jar -- ${JAVA_OPTIONS} \
	-Dopennms.home="$OPENNMS_HOME" \
	-Dlog4j.configurationFile="$OPENNMS_HOME"/etc/log4j2-tools.xml \
    -jar "$OPENNMS_BINDIR"/opennms_resource-cli-onejar.jar \
	"$@"
